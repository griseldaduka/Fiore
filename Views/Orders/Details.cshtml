@using System.Collections.Generic
@using Fiore.Models.ViewModels
@model Fiore.Models.Order

<div class="hero-area hero-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 offset-lg-2 text-center">
                <div class="hero-text">
                    <div class="hero-text-tablecell">
                        <h1>Order Details</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="cart-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12" style="margin-left:auto; margin-right:auto">
                <div class="cart-table-wrap">
                    <table class="cart-table">
                        <thead class="cart-table-head">
                            <tr class="table-head-row">
                                <th class="product-image"><b>Order Date</b></th>
                                <th class="product-name"><b>Total Price</b></th>
                                <th class="product-price"><b>House Number</b></th>
                                <th class="product-quantity"><b>Street</b> </th>
                                <th class="product-total"><b>City</b></th>
                                <th class="product-total"><b>Country</b></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="table-body-row">
                                <td class="product-name">@Model.OrderDate</td>
                                <td class="product-price">$@Model.TotalPrice</td>
                                <td class="product-total">@Model.HouseNumber</td>
                                <td class="product-total">@Model.StreetName</td>
                                <td class="product-total">@Model.CityName</td>
                                <td class="product-total">@Model.CountryName</td>
                            </tr>
                        </tbody>
                    </table>
                    <div >
                        <a asp-action="OrderProducts" class="cart-btn" asp-controller="ProductOrderDetails" asp-route-orderId="@Model.OrderId">View order products</a>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>