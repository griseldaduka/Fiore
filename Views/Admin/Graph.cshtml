<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <h1>Dashboard Data</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container" style="margin-top:40px; margin-bottom:40px ">
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product Total Amount Sales</h4>
                    <canvas id="barChartCanvas"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-6 ">
            <div class="card">
                <div class="card-body" >
                    <h4 class="card-title">Product Category Sales</h4>
                    <canvas style="height:100px" id="pieChartCanvas"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
        crossorigin="anonymous">
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js"></script>
<script>

    $(document).ready(function(){
        var productSalesUri = 'https://localhost:7258/api/dashboard/GetProductSales';
        $.getJSON(productSalesUri).done(function(result){
            barGraph(result);
        });

        var productCategorySalesUri = 'https://localhost:7258/api/dashboard/GetProductCategorySales';
        $.getJSON(productCategorySalesUri).done(function(result){
            pieGraph(result);
        });
    });

    function barGraph(jsonResult){
        var names = jsonResult.map(function(item) {
                    return item.name;
                });

        var sales = jsonResult.map(function(item) {
                    return item.sales;
                });

        const data = {
            labels: names,
            datasets: [{
                label: 'Sales',
                data: sales,
                backgroundColor: [
                  'rgba(255, 99, 132, 0.2)',
                  'rgba(255, 159, 64, 0.2)',
                  'rgba(255, 205, 86, 0.2)',
                  'rgba(75, 192, 192, 0.2)',
                  'rgba(54, 162, 235, 0.2)',
                  'rgba(153, 102, 255, 0.2)',
                  'rgba(201, 203, 207, 0.2)'
                ],
                borderColor: [
                  'rgb(255, 99, 132)',
                  'rgb(255, 159, 64)',
                  'rgb(255, 205, 86)',
                  'rgb(75, 192, 192)',
                  'rgb(54, 162, 235)',
                  'rgb(153, 102, 255)',
                  'rgb(201, 203, 207)'
                ],
                borderWidth: 1
            }]
        };

        var barChartCanvas = $("#barChartCanvas")[0].getContext("2d");
        var barChart = new Chart(barChartCanvas, {
            type: 'bar',
            data: data,
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                },
            });
    }

    function pieGraph(jsonResult){
        var names = jsonResult.map(function(item) {
                    return item.name;
                });

        var sales = jsonResult.map(function(item) {
                    return item.sales;
                });

        const data = {
            labels: names,
            datasets: [{
                data: sales,
                fill: true,
                aspectRatio: 1,
                backgroundColor: [ 'rgba(255, 99, 132, 0.2)', 'rgba(201, 203, 207, 0.2)', 'blue', 'pink', 'yellow'],
                borderColor: ['rgb(255, 99, 132)', 'rgb(255, 159, 64)'],
                borderWidth: [2,2]
            }]
        };

        var pieChartCanvas = $("#pieChartCanvas")[0].getContext("2d");
        var pieChart = new Chart(pieChartCanvas, {
            type: 'pie',
            data: data
            });
    }

</script>