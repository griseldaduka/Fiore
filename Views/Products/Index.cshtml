@model IEnumerable<Product>


<div class="hero-area hero-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 offset-lg-2 text-center">
                <div class="hero-text">
                    <div class="hero-text-tablecell">
                        <h1> All Products</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="product-section mt-150 mb-150">
    <div class="container" style="width:100%; margin-top:20px; margin-bottom:10px">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3><span class="orange-text">All</span> Products</h3>
                    <p> Create, Edit, Delete Products</p>
                </div>
            </div>
        </div>
        <div>
            <a class="cart-btn"  style="margin-bottom:30px" asp-action="Create">Create new product</a>

        </div>

        <table class="table">
            <thead>
                <tr>

                    <th>
                        Product Name
                    </th>

                    <th>
                        Description
                    </th>

                    <th>
                        Unit Price
                    </th>
                    <th>
                        Units in Stock
                    </th>
                    <th class="text-center">
                        Manage
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @item.ProductName
                        </td>

                        <td>
                            @item.Description
                        </td>

                        <td class="text-center">
                            @item.UnitPrice
                        </td>
                        <td class="text-center">
                            @item.UnitsInStock
                        </td>

                        <td>
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.ProductId">Update</a>
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ProductId">Details </a>
                            <a class=" btn btn-sm btn-warning" asp-action="Delete" asp-route-id="@item.ProductId">Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>