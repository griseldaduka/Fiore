@model IEnumerable<Fiore.Models.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Search Results";
}

<div class="text-center">
    <h1 class="display-4">Search Results</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                ProductName
            </th>

            <th>
                UnitPrice
            </th>
            <th class="text-center">
                Action
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @product.ProductName
                </td>
                <td>
                    @product.UnitPrice
                </td>
                <td>
                    <input type="hidden" value="@product.ProductId" class="productid" />

                    @if (product.IsInCart)
                    {
                        <label class="hide qnt-lbl">Quantity:</label>
                        <input type="number" value="1" class="qnt hide" />
                        <input type="button" value="Add to cart" class="add-to-cart hide" />
                        <a asp-action="ViewCart" class=" view-cart" asp-controller="ShoppingCart" id="viewcart">View Cart</a>
                    }
                    else
                    {
                        <label class="qnt-lbl">Quantity:</label>
                        <input type="number" value="1" class="qnt" />
                        <input type="button" value="Add to cart" class="add-to-cart" />
                        <a asp-action="ViewCart" class="hide view-cart" asp-controller="ShoppingCart" id="viewcart">View Cart</a>

                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
        crossorigin="anonymous">
</script>

<script type="text/javascript">

    $(document).ready(function() {
        $(".add-to-cart").click(function(){
            var productid= $(this).siblings('.productid').val();
            var qnt= $(this).siblings('.qnt').val();
            $(this).siblings('.view-cart').show();
            $(this).siblings('.qnt').hide();
            $(this).siblings('.qnt-lbl').hide();
            $(this).hide();

            $.ajax({
                type: 'POST',
                url: '/ShoppingCart/AddCartItem?id='+productid+'&quantity='+qnt,
                success: function (result) {
                    alert('Successfully received Data ');
                }
            });
        });
    });
</script>

