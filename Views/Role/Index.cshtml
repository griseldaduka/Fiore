@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p class="subtitle">Add roles</p>
                    <h1> Role Management</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container" style="width:80%;margin-top:50px; margin-bottom:50px">
    <div class="row">
        <div class="col-lg-8 offset-lg-2 text-center">
            <div class="section-title">
                <h3><span class="orange-text">All</span> Roles</h3>
                <p>You can Add New Role, Edit and Delete  </p>
            </div>
        </div>

        <table class="table table-sm table-bordered">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Name</th>
                <th class="text-center">Manage</th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">There are no roles</td>
                </tr>
            }
            else
            {
                foreach (var role in Model)
                {
                    <tr>
                        <td class="text-center">@role.Id</td>
                        <td class="text-center">@role.Name</td>
                        <td class="text-center">
                            @*<form method="post" asp-controller="Role" asp-action="Delete">
                                <input type="hidden" name="Id" value="@role.Id" />*@
                            <a class="btn btn-sm btn-warning" asp-controller="Role" asp-route-id="@role.Id" asp-action="ShowEdit">Edit</a>
                            <a class="btn btn-sm btn-warning" asp-controller="Role" asp-route-id="@role.Id" asp-action="DeleteRole">Delete</a>

                            @* <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>*@
                        </td>
                    </tr>
                }
            }
        </table>
        <div style="margin-top:50px; margin-bottom:50px; margin-left:auto; margin-right:auto">
            <a asp-action="Create" asp-controller="Role" class="cart-btn">Add Role</a>
        </div>
    </div>
</div>

